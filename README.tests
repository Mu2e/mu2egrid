mu2eprodsys --xrootd --wfpro=mu2egridtest --setup=$myOffline --expected-lifetime=1h --disk=2GB  --fcllist=joblist-s2.txt --dsconf=$(date +%Y%m%d%H%M%S)

#----------------------------------------------------------------
